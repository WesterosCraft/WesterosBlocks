{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["blocks"],
  "properties": {
    "blocks": {
      "type": "array",
      "description": "List of block definitions",
      "items": {
        "type": "object",
        "required": ["blockName", "blockType", "material", "creativeTab", "label"],
        "properties": {
          "blockName": {
            "type": "string",
            "description": "Name of block type - must be lower case string"
          },
          "blockType": {
            "type": "string",
            "enum": [
              "solid",
              "log",
              "plant",
              "crop",
              "slab",
              "wall",
              "fence",
              "web",
              "torch",
              "fan",
              "ladder",
              "cuboid",
              "cuboid-nsew",
              "cuboid-16way",
              "cuboid-ne",
              "cuboid-nsewud",
              "cuboid-nsew-stack",
              "fire",
              "leaves",
              "pane",
              "beacon",
              "vines",
              "bed",
              "flowerpot",
              "stair",
              "sand",
              "fencegate",
              "halfdoor",
              "sound"
            ],
            "description": "Type of block being defined"
          },
          "hardness": {
            "type": "number",
            "description": "Hardness or durability of the block"
          },
          "stepSound": {
            "type": "string",
            "enum": [
              "powder",
              "wood",
              "gravel",
              "grass",
              "stone",
              "metal",
              "glass",
              "cloth",
              "sand",
              "snow",
              "ladder",
              "anvil",
              "plant",
              "slime"
            ],
            "description": "Sound to be used when block is walked on"
          },
          "material": {
            "type": "string",
            "enum": [
              "rock",
              "cloth",
              "plants",
              "wood",
              "iron",
              "web",
              "fire",
              "leaves",
              "sand",
              "ground"
            ],
            "description": "Type of material for block"
          },
          "resistance": {
            "type": "number",
            "description": "Block explosion resistance"
          },
          "harvestLevel": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["tool", "level"],
              "properties": {
                "tool": {
                  "type": "string",
                  "enum": ["axe", "hoe", "pickaxe", "shovel", "sword"]
                },
                "level": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 4
                }
              }
            }
          },
          "creativeTab": {
            "type": "string",
            "description": "Which creative tab the block item should be placed in"
          },
          "lightValue": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Emitted light level of block- 0=none, 1=max (light level 16)"
          },
          "label": {
            "type": "string",
            "description": "Label for block"
          },
          "type": {
            "type": "string",
            "description": "Additional type properties for the block"
          },
          "nonOpaque": {
            "type": "boolean",
            "description": "If true, block is not solid and opaque"
          },
          "alphaRender": {
            "type": "boolean",
            "description": "If true, use alpha blending render (translucent)"
          },
          "lightOpacity": {
            "type": "integer",
            "minimum": 0,
            "description": "Light opacity value for the block"
          },
          "itemTextureIndex": {
            "type": "integer",
            "description": "Index of the texture to use for the item form"
          },
          "itemTexture": {
            "type": "string",
            "description": "Texture to use for the item form"
          },
          "boundingBox": {
            "type": "object",
            "properties": {
              "xMin": { "type": "number" },
              "xMax": { "type": "number" },
              "yMin": { "type": "number" },
              "yMax": { "type": "number" },
              "zMin": { "type": "number" },
              "zMax": { "type": "number" }
            },
            "required": ["xMin", "xMax", "yMin", "yMax", "zMin", "zMax"]
          },
          "textures": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of texture paths"
          },
          "randomTextures": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "textures": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "colorMult": {
            "type": "string",
            "description": "Color multiplier or path to colormap"
          },
          "rotateRandom": {
            "type": "boolean",
            "description": "If true, block model is randomly rotated"
          },
          "isCustomModel": {
            "type": "boolean",
            "description": "If true, uses custom model instead of generated one"
          },
          "states": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["stateID"],
              "properties": {
                "stateID": {
                  "type": "string"
                },
                "lightValue": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 1
                },
                "randomTextures": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["textures"],
                    "properties": {
                      "textures": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "cuboids": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["xMin", "xMax", "yMin", "yMax", "zMin", "zMax", "sideTextures"],
              "properties": {
                "xMin": { "type": "number" },
                "xMax": { "type": "number" },
                "yMin": { "type": "number" },
                "yMax": { "type": "number" },
                "zMin": { "type": "number" },
                "zMax": { "type": "number" },
                "sideTextures": {
                  "type": "array",
                  "items": {
                    "type": "integer"
                  }
                }
              }
            }
          },
          "stack": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["textures"],
              "properties": {
                "textures": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "boundingBox": {
                  "type": "object",
                  "properties": {
                    "xMin": { "type": "number" },
                    "xMax": { "type": "number" },
                    "yMin": { "type": "number" },
                    "yMax": { "type": "number" },
                    "zMin": { "type": "number" },
                    "zMax": { "type": "number" }
                  },
                  "required": ["xMin", "xMax", "yMin", "yMax", "zMin", "zMax"]
                }
              }
            },
            "minItems": 1,
            "maxItems": 2
          }
        }
      }
    }
  }
}